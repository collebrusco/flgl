.PHONY: default
default:
	mkdir -p build
	cd build && \
	cmake .. && \
	make

.PHONY: c
c: cm
	rm -rf ./build/CMakeFiles/untitled.dir/src/

.PHONY: cm
cm:
	rm -f ./build/CMakeCache.txt
	rm -f ./build/cmake_install.cmake
	rm -f ./build/cmake_install.local.cmake
	rm -f ./build/packaging.json
	rm -f ./build/compile_commands.json


.PHONY: ca
ca:
	rm -rf ./build/
	